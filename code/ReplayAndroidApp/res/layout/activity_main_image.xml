<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="fill_parent"
        android:layout_height="47sp"
        android:background="@color/blue14"
        android:orientation="horizontal"
        android:gravity="center" >

        <com.gc.materialdesign.views.ButtonRectangle
            android:radius="70sp"
	        android:id="@+id/settingsButton"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
            android:layout_marginRight="8dp"
	        android:text = "@string/setting"
	        android:textSize="15sp"
            android:textStyle="bold"
            android:padding="5dp"
            android:background="@color/blue6">
    	</com.gc.materialdesign.views.ButtonRectangle>

        <TextView
            android:id="@+id/mainPageTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:padding="10dp"
            android:gravity="center_horizontal"
            android:text="@string/main_page_title"
            android:textColor="@color/white"
            android:textSize="@dimen/main_title_text_size"
            android:textStyle="bold" />
        
        <com.gc.materialdesign.views.ButtonRectangle
	        android:id="@+id/nextButton"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
            android:layout_marginRight="8dp"
	        android:text = "@string/next_button"
	        android:textSize="15sp"
            android:textStyle="bold"
            android:padding="5dp"
            android:background="@color/blue6">
    	</com.gc.materialdesign.views.ButtonRectangle>
    </LinearLayout>

   

       <!--  <ListView
            android:id="@+id/appsListView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:background="@color/white"
            android:divider="@drawable/listitem"
            android:dividerHeight="1.5dip"
            android:layout_below="@+id/ll1"
             >
        </ListView> -->
        
        <GridView
          android:id='@+id/appsListView'
          android:layout_width='fill_parent'
          android:layout_height='fill_parent'
          android:columnWidth='100dip'
          android:gravity='center'
          android:padding="5dp"
          android:numColumns='auto_fit'
          android:stretchMode='columnWidth'
          android:horizontalSpacing='4dip'
          android:verticalSpacing='4dip'
          android:layout_below="@+id/ll1"
          />
  
</RelativeLayout>